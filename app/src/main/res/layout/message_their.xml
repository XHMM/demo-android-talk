<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/wMessageTheir_avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/wMessageTheir_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/wMessageTheir_avatar"
        android:layout_alignTop="@+id/wMessageTheir_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wMessageTheir_message"
        android:layout_below="@+id/wMessageTheir_name"
        android:layout_alignLeft="@+id/wMessageTheir_name"
        android:background="@drawable/message_their"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />

    <TextView
        android:id="@+id/wMessageTheir_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/wMessageTheir_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/wMessageTheir_name"
        android:text="2012-12-12 12:22"
        android:textSize="10sp" />

</RelativeLayout>